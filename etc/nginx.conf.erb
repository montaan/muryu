user  kig;
worker_processes  2;
worker_cpu_affinity 01 10;
#error_log  logs/error.log debug;
#error_log  logs/error.log  notice;
error_log  logs/error.log  info;
#pid        logs/nginx.pid;
events {
    worker_connections  10000;
    use epoll;
}
http {
  include       conf/mime.types;
  default_type  application/octet-stream;
  sendfile         on;
  keepalive_timeout 65;
  tcp_nopush       on;
  tcp_nodelay      off;
  gzip  on;
  gzip_min_length  500;
  gzip_buffers     4 8k;
  gzip_proxied     any;
  gzip_comp_level  9;
  gzip_types       text/plain text/html text/css text/javascript text/xml application/xml application/xml+rss application/json application/x-javascript;
  upstream mongrel {
    server 127.0.0.1:3000;
    server 127.0.0.1:3001;
    server 127.0.0.1:3002;
    server 127.0.0.1:3003;
#    server 127.0.0.1:3004;
#    server 127.0.0.1:3005;
#    server 127.0.0.1:3006;
#    server 127.0.0.1:3007;
  }
  upstream tile_info {
    server 127.0.0.1:4000;
  }
  upstream upload {
#    server 127.0.0.1:4000;
    server 127.0.0.1:4001;
  }
  server {
    listen <%= $https_port %>;
    server_name  <%= $host %>;
    ssl on;
    ssl_certificate /etc/apache2/ssl/apache.pem;
    ssl_certificate_key /etc/apache2/ssl/apache.pem;
#    ssl_certificate /usr/local/nginx/conf/cert.pem;
#    ssl_certificate_key /usr/local/nginx/conf/cert.key;
    keepalive_timeout 70;
    location ~ ^\/users\/ {
      proxy_set_header  X-Real-IP  $remote_addr;
      proxy_set_header  X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host $http_host;
      proxy_redirect false;
      proxy_max_temp_file_size 0;

      proxy_pass http://mongrel;
      break;
    }
    location / {
      rewrite ^(.*)$  http://$server_name:<%= $host %>$1  permanent;
      break;
    }
  }
  server {
    listen       <%= $http_port %>;
    server_name  <%= $host %>;
    root /home/kig/code/repos/future/html;
    index  index.html index.htm;
    location / {
      expires 30d;
      if (-f $request_filename/index.html) {
        rewrite (.*) $1/index.html break;
      }
    }
    location ~ ^\/(tile_info|items\/json) {
      proxy_set_header  X-Real-IP  $remote_addr;
      proxy_set_header  X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host $http_host;
      proxy_redirect false;
      proxy_max_temp_file_size 0;

      proxy_pass http://tile_info;
      break;
    }
    location ~ ^\/items\/create {
      client_max_body_size 1000M;
      proxy_read_timeout 7200;
      proxy_send_timeout 7200;
      proxy_set_header  X-Real-IP  $remote_addr;
      proxy_set_header  X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host $http_host;
      proxy_redirect false;
      proxy_max_temp_file_size 0;
      

      proxy_pass http://upload;
      break;
    }
    location ~ ^\/(items|files|subfiles|tile\/|tile_info|groups|sets|users\/(json|(set|delete|clear)_(preferences|workspace))) {
      proxy_set_header  X-Real-IP  $remote_addr;
      proxy_set_header  X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host $http_host;
      proxy_redirect false;
      proxy_max_temp_file_size 0;

      proxy_pass http://mongrel;
      break;
    }
    location ~ ^\/users {
      rewrite ^(.*)$  https://$server_name:<%= $https_port %>$1  permanent;
      break;
    }
    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   html;
    }
  }
}

